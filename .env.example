# Amadeus API Configuration
AMADEUS_API_KEY=your_amadeus_api_key_here
AMADEUS_API_SECRET=your_amadeus_api_secret_here
AMADEUS_ENV=test  # test or production

# Duffel API Configuration
DUFFEL_API_TOKEN=your_duffel_token_here

# Kiwi (Tequila) API Configuration (Alternative to Duffel)
KIWI_API_KEY=your_kiwi_api_key_here

# HubSpot Configuration
HUBSPOT_API_KEY=your_hubspot_api_key_here
HUBSPOT_PORTAL_ID=your_portal_id_here

# Sinch SMS (Primary Monetization Channel)
SINCH_SERVICE_PLAN_ID=your_sinch_service_plan_id_here
SINCH_API_TOKEN=your_sinch_api_token_here
SINCH_PHONE_NUMBER=+1234567890  # Your Sinch phone number

# Your Test Phone Number (for MVP testing)
YOUR_PHONE_NUMBER=+61412345678  # Your phone with country code

# Slack Notifications (Internal Alerts)
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
SLACK_CHANNEL=#fareglitch-alerts

# Email Notifications (Backup)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=alerts@fareglitch.com
SMTP_PASSWORD=your_email_password_here
ALERT_EMAIL_TO=founder@fareglitch.com

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/fareglitch
DATABASE_POOL_SIZE=10

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=your_secret_key_for_jwt_here

# Scanner Configuration
SCAN_INTERVAL_SECONDS=3600  # 1 hour
PRICE_DROP_THRESHOLD=0.70   # 70% drop to trigger alert
MIN_SAVINGS_AMOUNT=300      # Minimum $300 savings

# Deal Configuration (SMS Alert Model)
ALERT_FEE=5.00              # Monthly subscription for SMS alerts
INSTAGRAM_DELAY_HOURS=1     # Post to Instagram X hours after SMS
DEAL_EXPIRY_HOURS=48        # How long deals remain active

# Feature Flags
ENABLE_AUTO_PUBLISH=false   # Auto-publish to HubSpot or require manual approval
ENABLE_SMS_ALERTS=true      # Send SMS alerts to subscribers
ENABLE_INSTAGRAM_POSTING=true # Auto-post to Instagram after delay
DEBUG_MODE=false
