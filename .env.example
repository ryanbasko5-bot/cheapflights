# FareGlitch Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================
# AMADEUS API (Flight Data)
# ============================================
# Get credentials from: https://developers.amadeus.com/register
AMADEUS_API_KEY=your_amadeus_api_key_here
AMADEUS_API_SECRET=your_amadeus_api_secret_here
AMADEUS_ENV=test  # Use 'test' for development, 'production' for live

# ============================================
# TWILIO SMS (Primary SMS Provider)
# ============================================
# Get credentials from: https://www.twilio.com/console
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Your phone number for testing (E.164 format with country code)
YOUR_PHONE_NUMBER=+1234567890

# ============================================
# SINCH SMS (Backup SMS Provider - Optional)
# ============================================
# Get credentials from: https://dashboard.sinch.com
SINCH_SERVICE_PLAN_ID=your_service_plan_id_here
SINCH_API_TOKEN=your_sinch_api_token_here
SINCH_PHONE_NUMBER=+1234567890

# ============================================
# DATABASE
# ============================================
# For development (SQLite)
DATABASE_URL=sqlite:///./fareglitch.db

# For production (PostgreSQL)
# DATABASE_URL=postgresql://user:password@localhost:5432/fareglitch

# ============================================
# API SERVER
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
# Generate with: openssl rand -hex 32
API_SECRET_KEY=your_secret_key_here_use_openssl_rand_hex_32

# ============================================
# SCANNER CONFIGURATION
# ============================================
SCAN_INTERVAL_SECONDS=3600  # How often to scan (1 hour)
PRICE_DROP_THRESHOLD=0.50  # 50% drop threshold
MIN_SAVINGS_AMOUNT=200  # Minimum $200 savings

# ============================================
# BUSINESS MODEL CONFIGURATION
# ============================================
ALERT_FEE=5.00  # SMS subscription fee
UNLOCK_FEE_DEFAULT=7.00  # Default deal unlock fee
INSTAGRAM_DELAY_HOURS=1  # Delay before posting to Instagram
DEAL_EXPIRY_HOURS=48  # How long deals stay active

# ============================================
# DUFFEL API (Validation - Optional)
# ============================================
# Get from: https://duffel.com/signup
DUFFEL_API_TOKEN=duffel_test_your_token_here

# ============================================
# HUBSPOT (CRM/Commerce - Optional)
# ============================================
# Get from: HubSpot Settings → Integrations → Private Apps
HUBSPOT_API_KEY=pat-na1-your-hubspot-key-here
HUBSPOT_PORTAL_ID=your_portal_id_here

# ============================================
# SLACK ALERTS (Optional)
# ============================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#fareglitch-alerts

# ============================================
# ALTERNATIVE API PROVIDERS (Optional)
# ============================================

# Kiwi.com Tequila API
KIWI_API_KEY=your_kiwi_api_key_here

# SerpAPI (Google Flights)
# Get from: https://serpapi.com/dashboard
SERPAPI_KEY=your_serpapi_key_here

# Travelpayouts (Affiliate + API)
TRAVELPAYOUTS_TOKEN=your_token_here
TRAVELPAYOUTS_MARKER=your_affiliate_id_here

# AviationStack
AVIATIONSTACK_KEY=your_key_here

# RapidAPI
RAPIDAPI_KEY=your_key_here

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_AUTO_PUBLISH=false  # Auto-publish to HubSpot
ENABLE_SMS_ALERTS=true  # Enable SMS notifications
ENABLE_INSTAGRAM_POSTING=true  # Enable Instagram posts
ENABLE_SLACK_ALERTS=false  # Enable Slack notifications
DEBUG_MODE=false  # Enable debug logging

# ============================================
# MONITORING (Optional)
# ============================================
# Sentry DSN for error tracking
SENTRY_DSN=your_sentry_dsn_here

# ============================================
# DEPLOYMENT
# ============================================
# Railway/Heroku will set this automatically
PORT=8000
